{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "default_formatter": {
            "format": "[%(levelname)s:%(asctime)s] %(message)s"
        },
        "error_formatter": {
            "format": "%(levelname)s: %(message)s"
        }
    },
    "handlers": {
        "stream_handler": {
            "class": "logging.StreamHandler",
            "formatter": "default_formatter"
        },
        "module_file_handler": {
            "class": "logging.FileHandler",
            "filename": "pablo_tests/logger_trials/logs/qc_module.log",
            "mode": "w",
            "formatter": "default_formatter",
            "encoding": "utf8"
        }
    },
    "loggers": {
        "module_logger": {
            "handlers": [
                "stream_handler",
                "module_file_handler"
            ],
            "level": "DEBUG",
            "propagate": true
        }
    }
}